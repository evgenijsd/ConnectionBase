<Window x:Class="ConnectionBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectionBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Результирующие таблицы" FontSize="20" Margin="150,300,150,300" Click="ButtonResult_Click" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Установка соединений" FontSize="20" Margin="150,130,150,130" Click="ButtonConnection_Click" />
                <Button Content="Ввод данных (вразработке)" Grid.Row="1" FontSize="20" Margin="150,130,150,130" IsEnabled="False"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
